<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.smartcity.ui.news.NewsFragment"
        android:label="@string/News"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.smartcity.ui.shops.ShopsFragment"
        android:label="@string/Shops"
        tools:layout="@layout/fragment_shops" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.smartcity.ui.chat.ChatFragment"
        android:label="@string/Chat"
        tools:layout="@layout/fragment_chat" />
</navigation>